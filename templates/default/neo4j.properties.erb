# Neo4j
#
# neo4j.properties - database tuning parameters
#
################################################################

# Enable this to be able to upgrade a store from an older version.
#allow_store_upgrade=true
<% if node['neo4j']['neo4j.properties']['allow_store_upgrade'] %>
allow_store_upgrade=<%= node['neo4j']['neo4j.properties']['allow_store_upgrade'] %>
<% end -%>

# The amount of memory to use for mapping the store files, in bytes (or
# kilobytes with the 'k' suffix, megabytes with 'm' and gigabytes with 'g').
# If Neo4j is running on a dedicated server, then it is generally recommended
# to leave about 2-4 gigabytes for the operating system, give the JVM enough
# heap to hold all your transaction state and query context, and then leave the
# rest for the page cache.
# The default page cache memory assumes the machine is dedicated to running
# Neo4j, and is heuristically set to 75% of RAM minus the max Java heap size.
#dbms.pagecache.memory=10g
<% if node['neo4j']['neo4j.properties']['dbms.pagecache.memory'] %>
dbms.pagecache.memory=<%= node['neo4j']['neo4j.properties']['dbms.pagecache.memory'] %>
<% end -%>

# Enable this to specify a parser other than the default one.
#cypher_parser_version=2.0
<% if node['neo4j']['neo4j.properties']['cypher_parser_version'] %>
cypher_parser_version=<%= node['neo4j']['neo4j.properties']['cypher_parser_version'] %>
<% end -%>

# Keep logical logs, helps debugging but uses more disk space, enabled for
# legacy reasons To limit space needed to store historical logs use values such
# as: "7 days" or "100M size" instead of "true".
#keep_logical_logs=7 days
<% if node['neo4j']['neo4j.properties']['keep_logical_logs'] %>
keep_logical_logs=<%= node['neo4j']['neo4j.properties']['keep_logical_logs'] %>
<% end -%>

# Autoindexing

# Enable auto-indexing for nodes, default is false.
#node_auto_indexing=true
<% if node['neo4j']['neo4j.properties']['node_auto_indexing'] %>
node_auto_indexing=<%= node['neo4j']['neo4j.properties']['node_auto_indexing'] %>
<% end -%>

# The node property keys to be auto-indexed, if enabled.
#node_keys_indexable=name,age
<% if node['neo4j']['neo4j.properties']['node_keys_indexable'] %>
node_key_indexable=<%= node['neo4j']['neo4j.properties']['node_keys_indexable'] %>
<% end -%>

# Enable auto-indexing for relationships, default is false.
#relationship_auto_indexing=true
<% if node['neo4j']['neo4j.properties']['relationship_auto_indexing'] %>
relationship_auto_indexing=<%= node['neo4j']['neo4j.properties']['relationship_auto_indexing']%>
<% end -%>

# The relationship property keys to be auto-indexed, if enabled.
#relationship_keys_indexable=name,age
<% if node['neo4j']['neo4j.properties']['relationship_keys_indexable'] %>
relationship_keys_indexable=<%= node['neo4j']['neo4j.properties']['relationship_keys_indexable'] %>
<% end -%>

# Enable shell server so that remote clients can connect via Neo4j shell.
remote_shell_enabled=<%= node['neo4j']['neo4j.properties']['remote_shell_enabled'] %>
# The network interface IP the shell will listen on (use 0.0.0 for all interfaces).
remote_shell_host=<%= node['neo4j']['neo4j.properties']['remote_shell_host'] %>
# The port the shell will listen on, default is 1337.
remote_shell_port=<%= node['neo4j']['neo4j.properties']['remote_shell_port'] %>

# The type of cache to use for nodes and relationships.
#cache_type=soft
<% if node['neo4j']['neo4j.properties']['cache_type'] %>
cache_type=<%= node['neo4j']['neo4j.properties']['cache_type'] %>
<% end -%>
